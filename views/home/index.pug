include ../head.pug

body
  .container.mt-5
    h1 List

    table.table.table-responsive.table-hover.table-striped.table-dark
      thead
        tr
          th(scope="col") ID
          th(scope="col") Title
          th(scope="col") Author
          th(scope="col") Genre
          th(scope="col") Rating
          th(scope="col") Date Finished
          th(scope="col") Actions
      tbody

  script.
    document.addEventListener('DOMContentLoaded', function() {
      axios.get('/api/book')
        .then(function(response) {
          const books = response.data;
          const tableBody = document.querySelector('table tbody');
          books.forEach(b => {
            const row = document.createElement('tr');
            const book = b.book;
            row.innerHTML = `
              <td>${b.id}</td>
              <td>${book.title}</td>
              <td>${book.author}</td>
              <td>${book.genre}</td>
              <td>${book.rating}</td>
              <td>${book.dateFinished}</td>
              <td>
                <button class="btn btn-primary btn-sm" data-id="${b.id}" onclick="window.location.href='/update/${b.id}'">Edit</button>
                <button class="btn btn-danger btn-sm" data-id="${b.id}">Delete</button>
              </td>
            `;
            tableBody.appendChild(row);
          });
        })
        .catch(function(error) {
          console.log(error);
        });

      // Use event delegation for delete buttons
      document.addEventListener('click', function(event) {
        if (event.target && event.target.classList.contains('btn-danger')) {
          const bookId = event.target.getAttribute('data-id');
          axios.delete(`/api/book/${bookId}`).then(function(response) {
            console.log('Delete successful', response);
            location.href = '/';
          })
          .catch(function(error) {
            console.log('Error deleting book', error);
          });
        }
      });
    });

